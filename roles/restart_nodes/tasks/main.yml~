# tasks file for restart_nodes

- name: Reboot
  become: yes
  ansible.builtin.reboot:

- name: Wait for reboot to complete
  wait_for_connection:
      connect_timeout: 20
      sleep: 5
      delay: 5
      timeout: 300
  ansible.builtin.debug:
    msg: reboot complete 
